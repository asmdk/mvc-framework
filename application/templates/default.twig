<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title>{% block title %} Heartlys - Place Your Company Name Here {% endblock %}</title>
        <link href="/css/reset.css" rel="stylesheet" type="text/css" />
        <link href="/css/stylesheet.css" rel="stylesheet" type="text/css" />
    </head>

    <body>
    <div id="wrap">
        <div id="header">
            <div id="logo_container" class="clearfix">
                <div id="logo_image"><a href="/"></a> </div>
                <div id="nav_block" class="clearfix">
                    <div class="nav_button"><a href="/">Home</a></div>
                    <div class="nav_button"><a href="/about">About</a></div>
                    <div class="nav_button"><a href="/">Contacts</a></div>
                </div>
            </div>
        </div>
        <div id="content">

            {% block messages %}
                {{ show_messages(messages.getMessages()) }}
            {% endblock %}

            {% block content %}
            {% endblock %}
        </div>
    </div>
    <div id="footer">
        <div class="footer-background">
            <div class="footer-content">
                qwerty
            </div>
        </div>
        <div id="copywriteblock"> copyright 2015 </div>
    </div>
    </body>
</html>
